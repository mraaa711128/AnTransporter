<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.bu.mraaa.antransporter.MainActivity$PlaceholderFragment"
    android:background="@android:color/holo_orange_dark">

    <TextView
        android:layout_width="200dp"
        android:layout_height="230dp"
        android:text="@string/button_findmybus"
        android:id="@+id/btnFindMyBus"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal|bottom"
        android:drawableTop="@drawable/imgfindmybus"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textColorHighlight="@android:color/holo_blue_light"
        android:enabled="true"
        android:clickable="true" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="230dp"
        android:text="@string/button_findmystop"
        android:id="@+id/btnFindMyStop"
        android:layout_below="@+id/btnFindMyBus"
        android:layout_centerHorizontal="true"
        android:drawableTop="@drawable/imgfindmystop"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal|bottom"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textColorHighlight="@android:color/holo_blue_light"
        android:clickable="true"
        android:enabled="true" />
</RelativeLayout>
